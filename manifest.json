{
    "manifest_version": 2,
    "name": "github-hide-review-comments",
    "version": "1.0.1",
    "description": "Hide review comments on PRs",
    "content_scripts": [
        {
            "matches": [
                "https://github.com/**/pull/**"
            ],
            "js": [
                "extension.js"
            ],
            "css": ["overwrites.css"]
        }
    ],
    "permissions": [
        "storage",
		"https://github.com/*"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "daniel.huth1996@gmail.com",
            "strict_min_version": "57.0a1"
        }
    }
}
